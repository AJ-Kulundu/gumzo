<%= form_with url: sessions_path, class: "flex flex-col space-y-4" do |f| %>
    <div class="flex flex-col space-y-2 max-w-sm lg:max-w-lg">
        <%= f.label :email, class: "text-lg" %>
        <%= f.text_field :email, class: "p-2 border border-gray-300 rounded-lg" %>
    </div>
    <div class="flex flex-col space-y-2 max-w-sm lg:max-w-lg">
        <%= f.label :password, class: "text-lg" %>
        <%= f.password_field :password, class: "p-2 border border-gray-300 rounded-lg" %>
    </div>
    <div>
        <%= f.submit "Log In"%>
    </div>
<% end %>
