<%= form_with model: user, class: "flex flex-col space-y-4" do |f| %>

  <div class="flex flex-col space-y-2 max-w-sm lg:max-w-lg">
    <%= f.label :email, class: "text-lg" %>
    <%= f.text_field :email, class: "p-2 border border-gray-300 rounded-lg" %>
    <% user.errors.full_messages_for(:email).each do |message| %>
      <p class="text-red-500 text-sm"><%= message %></p>
    <% end %>
  </div>

  <div class="flex flex-col space-y-2 max-w-sm lg:max-w-lg">
    <%= f.label :first_name, class: "text-lg" %>
    <%= f.text_field :first_name, class: "p-2 border border-gray-300 rounded-lg" %>
    <% user.errors.full_messages_for(:first_name).each do |message| %>
      <p class="text-red-500 text-sm"><%= message %></p>
    <% end %>
  </div>

  <div class="flex flex-col space-y-2 max-w-sm lg:max-w-lg">
    <%= f.label :last_name, class: "text-lg" %>
    <%= f.text_field :last_name, class: "p-2 border border-gray-300 rounded-lg" %>
    <% user.errors.full_messages_for(:last_name).each do |message| %>
      <p class="text-red-500 text-sm"><%= message %></p>
    <% end %>
  </div>

  <div class="flex flex-col space-y-2 max-w-sm lg:max-w-lg">
    <%= f.label :password, class: "text-lg" %>
    <%= f.password_field :password, class: "p-2 border border-gray-300 rounded-lg" %>
    <% user.errors.full_messages_for(:password).each do |message| %>
      <p class="text-red-500 text-sm"><%= message %></p>
    <% end %>
  </div>

  <div class="flex flex-col space-y-2 max-w-sm lg:max-w-lg">
    <%= f.label :password_confirmation, class: "text-lg" %>
    <%= f.password_field :password_confirmation, class: "p-2 border border-gray-300 rounded-lg" %>
    <% user.errors.full_messages_for(:password_confirmation).each do |message| %>
      <p class="text-red-500 text-sm"><%= message %></p>
    <% end %>
  </div>

  <div>
    <%= f.submit "Sign Up", class: "py-2 px-4 bg-blue-500 text-white rounded-lg" %>
  </div>
<%end%>